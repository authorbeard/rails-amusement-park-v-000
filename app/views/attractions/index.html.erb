<h1>Listing attractions</h1>
<table>
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th>Tickets</th>
    <th>Details</th>
  </tr>
  <% @attractions.each do |a| %>
  <tr>
    <td>PICTURE</td>
    <td><%= a.name %> </td>
    <td><%= a.tickets %></td>
    <% if @user && @user.admin %>
      <td><%= link_to "Show #{a.name}", attraction_path(a) %></td>
    <% else %>
      <td><%= link_to "Go on #{a.name}", attraction_path(a) %></td>
    <% end %>
  </tr>
  <% end %>
</table>

<%= link_to "New Attraction", new_attraction_path if @user.admin %>